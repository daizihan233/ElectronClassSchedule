{
  "name": "electron_class_schedule",
  "version": "2147483647.1.0",
  "description": "classSchedule",
  "main": "main.js",
  "author": "KuoHu",
  "license": "GPLv3",
  "scripts": {
    "debug": "chcp 65001 && electron . --enable-logging",
    "rebuild": "electron-rebuild",
    "build": "electron-builder --win --ia32",
    "ci": "electron-builder --win --ia32 --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "@electron/rebuild": "^3.6.0",
    "electron": "^22.3.27",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "electron-disable-minimize": "^2.1.0",
    "electron-prompt": "^1.7.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.3.9",
    "fstream": "1.0.12",
    "node-gyp": "^10.0.1",
    "windows-shortcuts": "^0.1.6",
    "ws": "^8.18.0"
  },
  "build": {
    "appId": "cn.khbit.classschedule",
    "productName": "星程课表",
    "asar": true,
    "asarUnpack": [
      "js/scheduleConfig.js",
      "js/unfreeze.js",
      "scripts/**/*",
      "unfreeze.html",
      "unfreeze.config.js"
    ],
    "directories": {
      "buildResources": "build-resources"
    },
    "files": [
      "**/*",
      "!out/**",
      "!dist/**",
      "!**/*.map",
      "!**/*.log"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "电子课表",
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh",
      "packElevateHelper": false,
      "artifactName": "AstraSchedule-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "AstraSchedule-Portable-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "daizihan233",
        "repo": "ElectronClassSchedule",
        "releaseType": "release"
      }
    ]
  }
}
