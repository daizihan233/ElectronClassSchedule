{
  "name": "electron_class_schedule",
  "version": "20250927",
  "description": "classSchedule",
  "main": "main.js",
  "author": "KuoHu",
  "license": "GPLv3",
  "scripts": {
    "debug": "chcp 65001 && electron . --enable-logging",
    "rebuild": "electron-rebuild",
    "build": "electron-builder --win --x64",
    "dist": "electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^22.3.27",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "electron-disable-minimize": "^2.1.0",
    "electron-prompt": "^1.7.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.3.9",
    "node-gyp": "^10.0.1",
    "unzip": "^0.1.11",
    "windows-shortcuts": "^0.1.6",
    "ws": "^8.18.0"
  },
  "build": {
    "appId": "cn.khbit.classschedule",
    "productName": "电子课表",
    "asar": true,
    "directories": {
      "buildResources": "image"
    },
    "files": [
      "**/*",
      "!out/**",
      "!**/*.map",
      "!**/*.log"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "publisherName": "KuoHu"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "电子课表",
      "artifactName": "ElectronClassSchedule-Setup-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "daizihan233",
        "repo": "ElectronClassSchedule",
        "releaseType": "release"
      }
    ]
  }
}